{
  "name": "murmur",
  "version": "0.4.1",
  "description": "Minimal cron daemon for Claude Code. Schedule recurring AI sessions via HEARTBEAT.md prompt files.",
  "keywords": [
    "agent",
    "ai",
    "automation",
    "claude-code",
    "cli",
    "cron",
    "daemon",
    "heartbeat",
    "scheduler"
  ],
  "homepage": "https://github.com/t0dorakis/murmur",
  "license": "MIT",
  "author": "Theo",
  "repository": {
    "type": "git",
    "url": "https://github.com/t0dorakis/murmur.git"
  },
  "bin": {
    "murmur": "./src/cli.ts"
  },
  "type": "module",
  "module": "src/cli.ts",
  "scripts": {
    "build": "VERSION=$(bun -e 'console.log(JSON.stringify(require(\"./package.json\").version))') && bun build --compile --define \"__VERSION__=$VERSION\" src/cli.ts --outfile murmur",
    "release": "bash scripts/release.sh",
    "test": "bun test src/",
    "test:e2e": "bun test e2e-tests/",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint --type-check",
    "check": "oxfmt --check && oxlint --type-check",
    "prepare": "husky"
  },
  "dependencies": {
    "effect": "^3.19.15",
    "pretty-ms": "^9.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "*": "oxfmt --no-error-on-unmatched-pattern",
    "*.{ts,tsx,js,jsx}": "oxlint --type-check"
  }
}
